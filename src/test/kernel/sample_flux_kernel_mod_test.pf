module sample_flux_kernel_mod_test

  implicit none 


contains

  @test
  subroutine sample_flux_kernel_test()

    use pFUnit_Mod
    use function_space_build_mod,   only : fs_build, fs_destroy
    use field_mod,                  only : field_type,      &
                                           field_proxy_type
    use function_space_mod,         only : function_space_type, W0, W2, W3
    use sample_flux_kernel_mod,     only : sample_flux_code
    use constants_mod,              only : r_def, PLANE_BI_PERIODIC
    use quadrature_mod,             only : quadrature_type, QR3
    use mesh_mod,                   only : mesh_type

   implicit none
    type(field_type) :: chi(3)
    type(field_proxy_type )   :: chi_p(3) 
    type(function_space_type) :: fs
    type( quadrature_type), pointer :: qr => null()
    type(mesh_type)  :: mesh

    real(kind=r_def) :: tol, answer

    integer :: i, j, k, cell

    ! Variables for testing sample_flux
    type( field_type ) :: flux, rho, u, m

    integer          :: ndf_rho, undf_rho, dim_rho, &
                        ndf_u, undf_u, dim_u

    integer, pointer :: map_rho(:) => null(), &
                        map_u(:) => null() 

    real(kind=r_def), pointer :: nodes(:,:) => null()
    type( field_proxy_type ) :: flux_p, rho_p, u_p, m_p
    
    real(kind=r_def), dimension(:,:,:), allocatable :: &
                                  basis_rho

    tol = 1.0e-6_r_def  
    qr => qr%get_instance(QR3,9,3)

    ! Dummy mesh mod has 9 cells, 3 layers
    mesh = mesh_type(PLANE_BI_PERIODIC)

    ! build some function spaces ...
    call fs_build(mesh)

    ! Test flux computation
    flux = field_type( vector_space = fs%get_instance( mesh, W2 ) )
    u    = field_type( vector_space = fs%get_instance( mesh, W2 ) )
    m    = field_type( vector_space = fs%get_instance( mesh, W2 ) )
    rho  = field_type( vector_space = fs%get_instance( mesh, W3 ) )

    flux_p = flux%get_proxy()
    rho_p  = rho%get_proxy()
    u_p    = u%get_proxy()
    m_p    = m%get_proxy()

    ndf_u  = u_p%vspace%get_ndf( )
    undf_u = u_p%vspace%get_undf( )

    ndf_rho  = rho_p%vspace%get_ndf( )
    undf_rho = rho_p%vspace%get_undf( )
    dim_rho  = rho_p%vspace%get_dim_space( ) 
    allocate(basis_rho(dim_rho, ndf_rho, ndf_u))

    nodes => flux_p%vspace%get_nodes( )
    call rho_p%vspace%compute_nodal_basis_function(basis_rho, ndf_rho, ndf_u, nodes) 

    cell = 5
    map_u   => u_p%vspace%get_cell_dofmap( cell )
    map_rho => rho_p%vspace%get_cell_dofmap( cell )
    ! Create the data   
    flux_p%data(:) = 0.0_r_def
    u_p%data(:) = 0.0_r_def
    rho_p%data(:) = 2.0_r_def
    m_p%data(:) = 2.0_r_def

    u_p%data(map_u(5)+0) = 0.0_r_def
    u_p%data(map_u(5)+1) = 1.0_r_def
    u_p%data(map_u(6)+1) = 1.0_r_def
    u_p%data(map_u(6)+2) = 0.0_r_def
    rho_p%data(map_rho(1)) = 3.0_r_def
    rho_p%data(map_rho(1)+1) = 4.0_r_def

    call sample_flux_code(flux_p%vspace%get_nlayers(), &
                          flux_p%data, & 
                          m_p%data, &
                          u_p%data, &
                          rho_p%data, &
                          ndf_u, & 
                          undf_u, &
                          map_u, &
                          ndf_rho, &
                          undf_rho, &
                          map_rho, &
                          basis_rho &
                          )
     
     answer = 0.0_r_def 
     @assertEqual(answer, flux_p%data(map_u(1) ), tol)
     answer = 0.0_r_def 
     @assertEqual(answer, flux_p%data(map_u(5) ), tol)
     answer = 3.5_r_def 
     @assertEqual(answer, flux_p%data(map_u(6) ), tol)
     answer = 3.0_r_def 
     @assertEqual(answer, flux_p%data(map_u(5)+ 2 ), tol)

    !tear down ...
    call fs_destroy()
  
  end subroutine sample_flux_kernel_test

end module sample_flux_kernel_mod_test
